{
  "name": "@fictjs/kit",
  "version": "0.1.0",
  "description": "Fict meta-framework core",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "bin",
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fictjs/kit.git",
    "directory": "packages/kit"
  },
  "sideEffects": false,
  "bin": {
    "fict-kit": "bin/fict-kit.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./config": {
      "types": "./dist/config.d.ts",
      "import": "./dist/config.js",
      "require": "./dist/config.cjs"
    },
    "./vite": {
      "types": "./dist/vite.d.ts",
      "import": "./dist/vite.js",
      "require": "./dist/vite.cjs"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "require": "./dist/client.cjs"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    },
    "./router": {
      "types": "./dist/router.d.ts",
      "import": "./dist/router.js",
      "require": "./dist/router.cjs"
    },
    "./env": {
      "types": "./dist/env.d.ts",
      "import": "./dist/env.js",
      "require": "./dist/env.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "prepack": "pnpm run build",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "@babel/core": "^7.28.6",
    "@babel/traverse": "^7.28.5",
    "@babel/types": "^7.28.5",
    "cac": "^6.7.14",
    "picocolors": "^1.1.1"
  },
  "peerDependencies": {
    "@fictjs/devtools": ">=0.3.0",
    "@fictjs/router": ">=0.10.0",
    "@fictjs/runtime": ">=0.10.0",
    "@fictjs/ssr": ">=0.10.0",
    "@fictjs/vite-plugin": ">=0.10.0",
    "fict": ">=0.8.0",
    "vite": "^7.0.0"
  },
  "peerDependenciesMeta": {
    "@fictjs/devtools": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.28.0",
    "@types/node": "^25.2.3",
    "tsup": "^8.5.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "keywords": [
    "fict",
    "kit",
    "ssr",
    "resumability",
    "vite"
  ],
  "license": "MIT",
  "author": "unadlib"
}
